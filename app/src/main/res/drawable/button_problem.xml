<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- por defecto -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_light"></solid>
            <stroke android:color="@color/secondary_main" android:width="0.5dp"></stroke>

        </shape>
    </item>
    <!-- deshabilitado -->
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_light"></solid>
            <stroke android:color="@color/secondary_main" android:width="0.5dp"></stroke>

        </shape>
    </item>
    <!-- por defecto -->
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <solid android:color="#00000000"></solid>
            <stroke android:color="@color/secondary_main" android:width="0.5dp"></stroke>
        </shape>
    </item>
    <!-- presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_lighter"></solid>
            <stroke android:color="@color/secondary_main" android:width="0.5dp"></stroke>
        </shape>
    </item>
</selector>