<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/check_important_contact_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/contact_photo"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_check_important_contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fulano de Tal"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/emergency_name_check_important_contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergencia"
            android:textSize="15sp"
            android:gravity="left"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/answer_check_important_contact_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/contact_answer_ok"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

</LinearLayout>